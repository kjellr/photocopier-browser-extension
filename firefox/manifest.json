{
	"manifest_version": 2,

	"name": "Photocopier",
    "short_name": "Photocopier",
	"description": "Send websites through a broken photocopier.",
	"homepage_url": "https://github.com/kjellr/photocopier-browser-extension",
	"author": "Kjell Reigstad",
	"version": "1.0",

	"permissions": [
		"activeTab"
	],

	"background": {
		"scripts": ["action.js"]
	},

	"browser_action": {
		"default_title": "Photocopy this page.",
		"default_icon": "icon32.png"
	},

	"icons": {
		"16": "icon16.png",
		"32": "icon32.png",
		"48": "icon48.png",
		"128": "icon128.png"
	}
}